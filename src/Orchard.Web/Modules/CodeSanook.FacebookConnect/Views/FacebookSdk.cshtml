@using CodeSanook.FacebookConnect.Models
@using CodeSanook.Configuration.Models;
@{
    var setting = WorkContext.CurrentSite.As<CodeSanookModuleSettingPart>();
}

<script type="text/javascript">

    Setting = {};
    Setting.facebookAppId = @setting.FacebookAppId;

    window.fbAsyncInit = function () {
        FB.init({
            appId: Setting.facebookAppId,//test
            cookie: true,  // enable cookies to allow the server to access the session
            xfbml: true,  // parse social plugins on this page
            version: 'v2.5'
        });
        // Additional initialization code here
        $(document).triggerHandler('fbLoaded', ["Facebook SDK loaded"]);
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {
            return;
        }
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));


</script> 